{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "file": "./.vscode/daisyui.md"
    }
  ],
  "cSpell.ignorePaths": ["*.env", "*.json"],
  "cSpell.words": [
    "apikey",
    "Asar",
    "atrule",
    "caramellatte",
    "codesign",
    "cvburgess",
    "daisyui",
    "dexterplanner",
    "fullcalendar",
    "hcaptcha",
    "icalendar",
    "icns",
    "inbucket",
    "lofi",
    "messagebird",
    "nord",
    "Noto",
    "nvmrc",
    "oklch",
    "oneshot",
    "orioledb",
    "pangea",
    "Pomodoro",
    "pooler",
    "popovertarget",
    "popovertargetaction",
    "prefersdark",
    "scroller",
    "scrollgrid",
    "SENDGRID",
    "signup",
    "signups",
    "supabase",
    "synthwave",
    "textlocal",
    "timebox",
    "timegrid",
    "togglefullscreen",
    "totp",
    "uidotdev",
    "ULFO",
    "unlisten",
    "Unprioritized",
    "usehooks",
    "vite",
    "vonage",
    "workos"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  }
}
